{
  "meta": {
    "version": "1.0",
    "notes": "Non-LLM intent catalog with examples + regex. Patterns take priority; then keyword match; then TF-IDF."
  },

  "type_text": {
    "examples": [
      "type hello team meeting at 3 pm",
      "write this down",
      "dictate the following"
    ],
    "patterns": [
      "(?i)^(type|write|dictate)\\s+(?P<text>.+)$"
    ],
    "slots": ["text"]
  },

  "open_gmail": {
    "examples": ["open gmail", "go to gmail", "open my email", "open google mail"]
  },

