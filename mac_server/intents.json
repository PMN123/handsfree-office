    "examples": ["send email", "send it", "send this"]
  },

  "open_url": {
    "examples": ["open twitter.com", "go to github", "navigate to notion"],
    "patterns": [
      "(?i)^(open|go to|navigate to)\\s+(?P<url>[^\\s]+)$"
    ],
    "slots": ["url"]
  },

  "open_app": {
    "examples": ["open chrome", "launch safari", "start keynote"],
    "patterns": [
      "(?i)^(open|launch|start)\\s+(?P<app>.+)$"
    ],
    "slots": ["app"]
  },

