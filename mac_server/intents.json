"new_email": {
  "examples": ["new email", "compose email", "start a draft", "new message"]
},
"compose_email_to": {
  "examples": ["compose email to alice", "email bob at example dot com"],
  "patterns": [
    "(?i)^(compose|email|mail|send)\\s+(?:an?\\s+)?(?:email|mail|message)?\\s*to\\s+(?P<to>.+)$"
  ],
  "slots": ["to"]
},
"compose_email_full": {
  "examples": ["compose to alice subject hello body hi there"],
  "patterns": [
    "(?i)^compose\\s+(?:email\\s+)?to\\s+(?P<to>[^\\s]+(?:\\s+[^\\s]+)*)\\s+subject\\s+(?P<subject>[^\\s].*?)\\s+body\\s+(?P<body>.+)$"
  ],
  "slots": ["to", "subject", "body"]
}
